{
  "manifest_version": 3,
  "name": "ChromaLens - Colorblind Accessibility Tool",
  "version": "2.0.0",
  "description": "A color accessibility tool featuring an accurate color inspector for identifying colors on any webpage.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChromaLens",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}